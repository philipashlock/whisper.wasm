{
  "name": "@timur00kh/whisper.wasm",
  "version": "0.0.7",
  "description": "WebAssembly bindings for OpenAI Whisper speech recognition",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "wasm",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:lib",
    "build:lib": "vite build --mode library",
    "build:demo": "vite build --mode demo",
    "build:demo:github": "DEMO_BASE_PATH=/whisper.wasm/ vite build --mode demo",
    "dev": "npm run dev:demo",
    "dev:demo": "vite --mode demo --port 7008",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write . && npm run lint:fix",
    "prepare": "npm run build:lib",
    "prepublishOnly": "npm run format:check && npm run lint && npm run build:lib"
  },
  "keywords": [
    "whisper",
    "speech-recognition",
    "webassembly",
    "wasm",
    "openai",
    "audio",
    "transcription",
    "whisper.cpp",
    "voice-to-text",
    "ai",
    "machine-learning"
  ],
  "author": {
    "name": "Timur Kh",
    "email": "info@mithk.ru",
    "url": "https://github.com/timur00kh"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "devDependencies": {
    "@types/emscripten": "^1.40.1",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "wasm-feature-detect": "^1.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/philipashlock/whisper.wasm.git"
  },
  "bugs": {
    "url": "https://github.com/philipashlock/whisper.wasm/issues"
  },
  "homepage": "https://github.com/philipashlock/whisper.wasm#readme",
  "publishConfig": {
    "access": "public"
  }
}
